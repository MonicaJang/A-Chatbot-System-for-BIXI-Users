    "def open_html_file(html_path):\n",
    "    \"\"\"\n",
    "    Opens the given HTML file in the default web browser.\n",
    "    Works across macOS, Windows, and Linux.\n",
    "    \"\"\"\n",
    "    html_path = Path(html_path).resolve()\n",
    "    url = f\"file://{html_path}\"\n",
    "\n",
    "    try:\n",
    "        if not webbrowser.open(url):\n",
    "            raise Exception(\"webbrowser.open() failed\")\n",
    "    except:\n",
    "        if sys.platform.startswith('darwin'):\n",
    "            os.system(f\"open '{html_path}'\")\n",
    "        elif sys.platform.startswith('win'):\n",
    "            os.system(f'start \"\" \"{html_path}\"')\n",
    "        elif sys.platform.startswith('linux'):\n",
    "            os.system(f\"xdg-open '{html_path}'\")\n",
    "        else:\n",
    "            print(\"Unsupported OS. Please open manually:\", html_path)\n",
    "\n",
    "\n",
    "\n",
    "def openMontrealMap():\n",
    "    \"\"\"\n",
    "    This function will open a map centered on Montreal as an HTML file in the user's browser.\n",
    "    When they click anywhere, it displays the coordinates of that location and copies them to their clipboard.\n",
    "    This function does not return anything.\n",
    "    \"\"\"\n",
    "\n",
    "    # Create a folium map centered on Montreal with an initial zoom level of 13\n",
    "    m = folium.Map(location=[45.5017, -73.5673], zoom_start=13)\n",
    "\n",
    "    # HTML and CSS code for a fixed coordinate display box in the top-right corner of the page\n",
    "    style = \"\"\"\n",
    "    <style>\n",
    "    /* Style for the introductory instruction message displayed when the map opens */\n",
    "    #intro-message {\n",
    "        position: fixed;                /* Keep the message fixed on the screen */\n",
    "        top: 10px;                      /* Place near the top of the window */\n",
    "        left: 50%;                      /* Horizontally centered */\n",
    "        transform: translateX(-50%);    /* Perfectly center it by offsetting half its width */\n",
    "        background-color: rgba(0,0,0,0.7); /* Semi-transparent dark background */\n",
    "        color: white;                   /* White text for readability */\n",
    "        padding: 12px 24px;             /* Space inside the box */\n",
    "        border-radius: 8px;             /* Rounded corners */\n",
    "        font-size: 18px;                /* Slightly smaller font for multi-line message */\n",
    "        font-family: Arial, sans-serif; /* Clean, readable font */\n",
    "        z-index: 1001;                  /* Appear above coordinate display */\n",
    "        text-align: center;             /* Center the text horizontally */\n",
    "        box-shadow: 0 0 10px rgba(0,0,0,0.3); /* Subtle shadow for better visibility */\n",
    "        max-width: 90%;\n",
    "        line-height: 1.4;\n",
    "    }\n",
    "\n",
    "    /* Style for the floating coordinate display box */\n",
    "    #coord-display {\n",
    "        position: fixed;\n",
    "        top: 80px;                      /* Moved lower to avoid overlap with intro message */\n",
    "        right: 10px;\n",
    "        background-color: rgba(255,255,255,0.95);\n",
    "        padding: 12px 18px;\n",
    "        border-radius: 8px;\n",
    "        font-size: 24px;\n",
    "        font-weight: bold;\n",
    "        font-family: Arial, sans-serif;\n",
    "        z-index: 1000;\n",
    "        box-shadow: 0 0 10px rgba(0,0,0,0.3);\n",
    "        user-select: all;\n",
    "        transition: opacity 0.5s ease;\n",
    "    }\n",
    "\n",
    "    /* Style for the small \"Coordinates copied\" message below the coordinate text */\n",
    "    #copy-message {\n",
    "        font-size: 16px;\n",
    "        font-weight: normal;\n",
    "        color: green;\n",
    "        margin-top: 4px;\n",
    "    }\n",
    "    </style>\n",
    "\n",
    "    <!-- Instructional message displayed when the map opens -->\n",
    "    <div id=\"intro-message\">\n",
    "        Please click on the map to copy coordinates to clipboard.<br>\n",
    "        Once you have clicked on your location, paste the coordinates into the user prompt.\n",
    "    </div>\n",
    "\n",
    "    <!-- Coordinate display box showing live click result -->\n",
    "    <div id=\"coord-display\">\n",
    "        Click on the map to see coordinates here\n",
    "        <div id=\"copy-message\" style=\"opacity: 0;\">Coordinates copied to clipboard</div>\n",
    "    </div>\n",
    "    \"\"\"\n",
    "\n",
    "\n",
    "\n",
    "    # JavaScript code to:\n",
    "    # - Locate the Leaflet map instance created by Folium\n",
    "    # - Listen for clicks on the map\n",
    "    # - Display clicked coordinates in the coord-display div\n",
    "    # - Copy the coordinates to the clipboard\n",
    "    # - Show a brief \"Coordinates copied\" message\n",
    "    js = \"\"\"\n",
    "    <script>\n",
    "    console.log(\"Waiting for map variable...\");\n",
    "\n",
    "    // Function to find the Leaflet map variable created by Folium\n",
    "    function findMapVariable() {\n",
    "        for (var key in window) {\n",
    "            if (window[key] instanceof L.Map) {\n",
    "                console.log(\"Map variable found:\", key);\n",
    "                return window[key];\n",
    "            }\n",
    "        }\n",
    "        return null; // no map found yet\n",
    "    }\n",
    "\n",
    "    // Sets up the click handler once the map is found\n",
    "    function setupClickHandler() {\n",
    "        var map = findMapVariable();\n",
    "        if (map) {\n",
    "            // Attach a click listener to the map\n",
    "            map.on('click', function(e) {\n",
    "                var lng = e.latlng.lng.toFixed(6); // longitude with 6 decimal places\n",
    "                var lat = e.latlng.lat.toFixed(6); // latitude with 6 decimal places\n",
    "                var coordStr = '(' + lat + ', ' + lng + ')'; // create coordinate string\n",
    "\n",
    "                // Update the coord-display div with new coordinates\n",
    "                var display = document.getElementById('coord-display');\n",
    "                var message = document.getElementById('copy-message');\n",
    "                if (display) {\n",
    "                    display.firstChild.textContent = coordStr; // replace text with coordinates\n",
    "                    console.log('Updated coordinate display div:', coordStr);\n",
    "                } else {\n",
    "                    console.error('Coordinate display div not found!');\n",
    "                }\n",
    "\n",
    "                // Show \"copied\" message with fade out\n",
    "                if (message) {\n",
    "                    message.style.opacity = 1; // show the \"copied\" message\n",
    "                    clearTimeout(window._copyMsgTimeout); // clear any existing timeout\n",
    "                    window._copyMsgTimeout = setTimeout(() => {\n",
    "                        message.style.opacity = 0; // fade out after 3 seconds\n",
    "                    }, 3000);\n",
    "                }\n",
    "\n",
    "                // Copy the coordinates to the user's clipboard\n",
    "                navigator.clipboard.writeText(coordStr).then(function() {\n",
    "                    console.log('Coordinates copied to clipboard:', coordStr);\n",
    "                }).catch(function(err) {\n",
    "                    console.error('Failed to copy:', err);\n",
    "                });\n",
    "            });\n",
    "        } else {\n",
    "            // If map not found, retry after 500 milliseconds\n",
    "            console.log(\"Map not found, retrying in 500ms...\");\n",
    "            setTimeout(setupClickHandler, 500);\n",
    "        }\n",
    "    }\n",
    "\n",
    "    // Start setting up the click handler after 1 second to ensure Folium map is fully loaded\n",
    "    setTimeout(setupClickHandler, 1000);\n",
    "    </script>\n",
    "    \"\"\"\n",
    "\n",
    "    # Add the style and JavaScript elements to the HTML of the folium map\n",
    "    m.get_root().html.add_child(folium.Element(style + js))\n",
    "\n",
    "    # Save the map as an HTML file\n",
    "    html_filename = \"mtl_clickable_map.html\"\n",
    "    m.save(html_filename)\n",
    "\n",
    "    # Open the saved map file in the default web browser\n",
    "    open_html_file(html_filename)\n",
    "\n",
    "def getUserLocation():\n",
    "    \"\"\"\n",
    "    This function will ask the user for their approximate location. The format of the input should be (LONGITUDE, LATITUDE)\n",
    "    Returns two variables of type float: longitude, latitude.\n",
    "    \"\"\"\n",
    "\n",
    "    # Open an interactive map centered on Montreal (you can scroll to other cities)\n",
    "    openMontrealMap()\n",
    "\n",
    "    # Prompt the user for their coordinates:\n",
    "    # Start interaction loop\n",
    "    while True:\n",
    "        # Ask the user to paste coordinates here:\n",
    "        print(\"Click on your current location using the interactive map to copy your coordinates and paste them in this dialog box (type 'exit' to exit).\")\n",
    "        user_coords = input(\"Please enter your coordinates here (latitude, longitude): \").strip()\n",
    "\n",
    "        # If the user wants to exit:\n",
    "        if user_coords.lower() == 'exit':\n",
    "            # Assign placeholder values\n",
    "            latitude = None\n",
    "            longitude = None\n",
    "            break # Break out of the loop\n",
    "\n",
    "        # If the user does not choose to exit\n",
    "        else:\n",
    "            # Use try-except to handle errors\n",
    "            try:\n",
    "                # Extract longitude and latitude from user input\n",
    "                latitude, longitude = user_coords.split(\",\")\n",
    "\n",
    "                # Clean up the input:\n",
    "                # Remove the parenthesis\n",
    "                longitude = longitude.replace(\"(\", \"\").replace(\")\", \"\")\n",
    "                latitude = latitude.replace(\"(\", \"\").replace(\")\", \"\")\n",
    "\n",
    "                # Remove trailing and leading spaces\n",
    "                longitude = longitude.strip()\n",
    "                latitude = latitude.strip()\n",
    "\n",
    "                # Convert input to numbers:\n",
    "                longitude = float(longitude)\n",
    "                latitude = float(latitude)\n",
    "                \n",
    "                break # Break out of the loop if the input is valid\n",
    "\n",
    "            # If the output cannot be split into two components or if it is not a number (cannot be converted to a float)\n",
    "            except ValueError:\n",
    "                print(\"Please only enter coordinates as numbers ONLY in the following form, including parenthesis (LATITUDE, LONGITUDE). Please try again.\")\n",
    "\n",
    "    # Now we can output the longitude and latitude:\n",
    "    return latitude, longitude\n",
    "\n",
    "def openGoogleMaps(url):\n",
    "    \"\"\"\n",
    "    This function will not return anything, it will just open the url on a web browser in different ways based on the user's operating system.\n",
    "    \"\"\"\n",
    "\n",
    "    try:\n",
    "        # Try webbrowser first\n",
    "        if not webbrowser.open(url):\n",
    "            raise Exception(\"webbrowser.open() failed\")\n",
    "    except:\n",
    "        # Fallback depending on operating system\n",
    "        if sys.platform.startswith('darwin'):  # macOS\n",
    "            os.system(f\"open '{url}'\")\n",
    "\n",
    "        elif sys.platform.startswith('win'):\n",
    "            os.system(f\"start {url}\")\n",
    "\n",
    "        elif sys.platform.startswith('linux'):\n",
    "            os.system(f\"xdg-open '{url}'\")\n",
    "        else:\n",
    "            print(\"Unsupported OS. Please open this URL manually:\", url)\n",
    "\n",
    "\n",
    "def selectSavedLocation(user_locations):\n",
    "    \"\"\"\n",
    "    This function asks to select which trip they want to select from their saved trips. A user's saved locations is\n",
    "    inputted as an argument of type dictionary: user_locations. (Each location should have name and lon. / lat.)\n",
    "    Returns two variables of type float: longitude, latitude.\n",
    "    \"\"\"\n",
    "\n",
    "    # Construct the string with location names:\n",
    "    saved_locations_string = \"Please select from your saved locations:\"\n",
    "\n",
    "    # Make an empty list that will store the numbers which are valid inputs:\n",
    "    valid_inputs = []\n",
    "\n",
    "    # Loop through saved locations list:\n",
    "    for n_location in range(len(user_locations)):\n",
    "        # Retrieve the location object from the list\n",
    "        thisLocation = user_locations[n_location]\n",
    "\n",
    "        # Create the string for the next line\n",
    "        new_string = f\"\\n{n_location + 1}: {thisLocation.name}\"\n",
    "\n",
    "        # Add this string to the final string:\n",
    "        saved_locations_string += new_string\n",
    "        \n",
    "        # Add n_location + 1 to the valid inputs\n",
    "        valid_inputs += str([n_location + 1])\n",
    "    \n",
    "    # Present the options to the user:\n",
    "    print(saved_locations_string)\n",
    "\n",
    "    # Continuous interaction loop:\n",
    "    while True:\n",
    "        # Ask user for their selected location:\n",
    "        user_response = input(\"Please select a valid input from your saved locations (0 to exit): \").strip()\n",
    "        \n",
    "        # Check if the user response is in the valid inputs list\n",
    "        if user_response in valid_inputs:\n",
    "            # Convert input into an int. This should never cause issues because valid_inputs are always numbers\n",
    "            user_response = int(user_response)\n",
    "\n",
    "            # Go get the location object from the list (- 1 because we did + 1 before):\n",
    "            selected_location = user_locations[user_response - 1]\n",
    "\n",
    "            # Get latitude and longitude:\n",
    "            lat = selected_location.lat\n",
    "            lon = selected_location.lon\n",
    "\n",
    "            break # Break out of the loop\n",
    "\n",
    "        # If the user wants to exit:\n",
    "        elif user_response == '0':\n",
    "            # Assign None so we know the user exited\n",
    "            lat = None\n",
    "            lon = None\n",
    "            break \n",
    "        \n",
    "        # If the response is not a valid input:\n",
    "        else:\n",
    "            # Notify user and prompt to try again:\n",
    "            print(\"Unrecognized input, please only select from the locations shown. Please try again.\")\n",
    "\n",
    "    return lat, lon\n",
    "        \n",
    "\n",
    "def wantsToSaveNewLocation():\n",
    "    \"\"\"\n",
    "    This function will ask the user if they want to save their selected location in their account.\n",
    "    This function returns a variable of type string: user_response.\n",
    "        'yes': The user wants to save this as a new location\n",
    "        'no': The user does not want to save this as a new location\n",
    "    \"\"\"\n",
    "\n",
    "    # Ask the user if they want to save this new location:\n",
    "    # Continuous interaction loop\n",
    "    while True:\n",
    "        # Prompt user for their answer, clean up the input\n",
    "        user_response = input(\"Do you want to save the selected location as a new location in your profile? (yes/no): \").strip().lower()\n",
    "\n",
    "        # If the user wants to save this location\n",
    "        if user_response == 'yes':\n",
    "            # Return user_response\n",
    "            return user_response # This automatically breaks the loop because we break out of the function\n",
    "        \n",
    "        # If the user does not want to save this location\n",
    "        elif user_response == 'no':\n",
    "            # Return user_response\n",
    "            return user_response # This automatically breaks the loop because we break out of the function\n",
    "        \n",
    "        # If the user did not enter a valid input (yes or no)\n",
    "        else:\n",
    "            # Notify user that their input was unrecognized, try again:\n",
    "            print(\"Sorry I did not understand, please only respond with either yes or no. Please try again.\")\n",
    "\n",
    "def saveNewLocation(user_locations, new_lat, new_lon):\n",
    "    \"\"\"\n",
    "    This function will ask the user to name the new location they want to save to their profile. The name\n",
    "    of this location cannot be the same as a past location.\n",
    "    user_locations: A list of objects of type Location.\n",
    "    It takes the user locations database and the longitude/latitude of the new location they wish to save.\n",
    "    Returns the new database of users\n",
    "    \"\"\"\n",
    "\n",
    "    # Make a list of location names:\n",
    "    # Start with empty list\n",
    "    location_names = []\n",
    "    for thisLocation in user_locations:\n",
    "        # Add the new name to the list (Uppercase to make it clearer\n",
    "        # and we dont want the same name with the only difference being upper and lower case, it would be unclear)\n",
    "        location_names += [thisLocation.name.upper()]\n",
    "    \n",
    "    # Start continuous interaction loop to get a valid location name:\n",
    "    while True:\n",
    "        # Ask the user for the new name and clean up their input.\n",
    "        new_location_name = input(f\"What would you like to name this new location, this name must be different from existing saved location names (not case sensitive):\\n{location_names}\\nNew location name ('0' to exit): \").strip()\n",
    "\n",
    "        # Capitalize the first letter of every word\n",
    "        new_location_name = string.capwords(new_location_name)\n",
    "\n",
    "        # If the user wants to exit the application:\n",
    "        if new_location_name == '0':\n",
    "            # Notify user they have decided to skip this step. Their location will not be saved.\n",
    "            # This user's locations will not be changed\n",
    "            print(\"You have chosen not to save this location.\")\n",
    "            break\n",
    "        \n",
    "        # If the user inputted only spaces, the strip method would have removed every character:\n",
    "        elif len(new_location_name) == 0:\n",
    "            # Notify the user they cannot do that:\n",
    "            print(\"A location name cannot only be spaces. Please try again.\")\n",
    "            \n",
    "        # If the new location name already exists\n",
    "        elif new_location_name.upper() in location_names:\n",
    "            # Notify the user to change the name\n",
    "            print(\"You already have a location with that name, please enter a different name.\")\n",
    "        \n",
    "        # If the new location name is valid:\n",
    "        else:\n",
    "            # Create new location object\n",
    "            new_location = Location(name = new_location_name, lat = new_lat, lon = new_lon)\n",
    "\n",
    "            # Add it to the user's saved locations list:\n",
    "            user_locations += [new_location] # Make the word of every first letter capitalized (cleaner)\n",
    "\n",
    "            # Notify the user that the name was accepted and that the new location is being added to the database:\n",
    "            print(\"This location has been saved:\", new_location)\n",
    "\n",
    "            break # Break out of the loop:\n",
    "\n",
    "    # Return the location_list (changed or unchanged)\n",
    "    return user_locations\n",
    "\n",
    "\n",
    "\n",
    "class Location:\n",
    "    def __init__(self, name, lat, lon):\n",
    "        self.name = name\n",
    "        self.lat = lat\n",
    "        self.lon = lon\n",
    "\n",
    "    def __str__(self):\n",
    "        return f\"{self.name}: ({self.lat}, {self.lon})\"\n",
    "    \n",
    "    def __repr__(self):\n",
    "        return self.__str__()\n"
   ]
