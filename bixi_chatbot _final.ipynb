    "    \"\"\"\n",
    "\n",
    "    # We create a list of all the possible answers the user could give. While there could be infinite variations, these represent the most common ones.\n",
    "    normal=[\"1\", \"1.\", \"1:\", \"1 \", \"1:normal\", \"normal\", \"1 normal\", \"1.normal\", \"one\", \"first\"]\n",
    "    ebike=[\"2\", \"2.\", \"2:\",\"2 \", \"2:ebike\", \"ebike\", \"2 ebike\", \"2.ebike\", \"e-bike\", \"ebike\", \"ebik\", \"2 e-bike\", \"2.e-bike\", \"2:e-bike\", \"two\", \"second\"]\n",
    "    dock=[\"3\", \"3.\", \"3:\", \"3 \", \"3:dock\", \"dock\", \"3 dock\", \"3.dock\", \"three\", \"third\"]\n",
    "\n",
    "    # Construct and print the options\n",
    "    service_options = \"\"\"\n",
    "    What service would you like assistance with?\n",
    "        1: Normal\n",
