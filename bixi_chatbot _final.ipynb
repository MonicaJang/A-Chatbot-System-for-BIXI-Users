    "\n",
    "def getUserEmail():\n",
    "    \"\"\"\n",
    "    This function will ask the user for their email.\n",
    "    Returns a variable of type String: user_email.\n",
    "    Output should be all lowercase, and in the format of a normal email: username@address.com\n",
    "    \"\"\"\n",
    "\n",
    "    while True:\n",
    "        user_email = input(\"What is your email? (Enter 'exit' to exit)\").strip().lower()\n",
    "\n",
    "        # If the user wants to exit the app:\n",
    "        if user_email == 'exit':\n",
    "            # Immediately return 'exit' as the user's email to indicate they want to exit\n",
    "            return user_email\n",
    "\n",
    "        # No spaces or commas\n",
    "        if \" \" in user_email or \",\" in user_email:\n",
    "            # Print message:\n",
    "            print(\"Invalid email: no spaces or commas allowed.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "\n",
    "        # Exactly one '@'\n",
    "        if user_email.count(\"@\") != 1:\n",
    "            # Print message:\n",
    "            print(\"Invalid email: must contain exactly one '@'.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "        \n",
    "        # Split the email between what is before and after the @\n",
    "        local, domain = user_email.split(\"@\")\n",
    "\n",
    "        # Local part checks\n",
    "        if not local or local.startswith(\".\") or local.endswith(\".\"):\n",
    "            # Print message:\n",
    "            print(\"Invalid email: local part is invalid.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "\n",
    "        # Domain part checks\n",
    "        if len(domain) < 3 or \".\" not in domain:\n",
    "            # Print message:\n",
    "            print(\"Invalid email: domain must contain a '.' and be at least 3 characters.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "\n",
    "        if domain.startswith((\".\", \"-\")) or domain.endswith((\".\", \"-\")):\n",
    "            # Print message:\n",
    "            print(\"Invalid email: domain cannot start or end with '.' or '-'.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "\n",
    "        # No consecutive dots anywhere\n",
    "        if \"..\" in user_email:\n",
    "            # Print message:\n",
    "            print(\"Invalid email: cannot contain consecutive dots.\")\n",
    "            continue # Continue the loop so we skip the return statement)\n",
    "        \n",
    "        # If we make it to this line of code, it means we have not entered one of the conditions above\n",
    "        # because we never got to a continue line.\n",
    "        return user_email\n",
    "\n",
    "\n",
    "\n",
    "def wantsToCreateAccount():\n",
    "    \"\"\"\n",
    "    This function will ask the user if they want to create an account.\n",
    "    Returns a variable of type string: create_account\n",
    "        'yes': The user wants to create an account.\n",
    "        'no': The user does not want to create an account, continue as a guest.\n",
    "        'exit': The user wants to exit the application.\n",
    "    \"\"\"\n",
    "    # answers is a local variable that contains the possible responses.\n",
    "    answers = ['yes', 'no', 'exit']\n",
    "    # A while loop ensures the question is repeated until the user provides a valid input\n",
    "    while True:\n",
    "        # account stores the user’s input, allowing them to indicate whether they want to create an account.\n",
    "\n",
    "        account_response = input(\"Would you like to create an account? Please reply with yes, no, or type exit to end this conversation.\").strip().lower()\n",
    "        # We use an if condition to check if the user input matches one of the possible answers. If it does, the while loop stops; otherwise, \n",
    "        # the question is asked again until the user provides a valid response.\n",
    "        if account_response in answers:\n",
    "            # Return the user respone. We do not need break here because the return also leaves the while loop\n",
    "            return(account_response)\n",
    "        else:\n",
    "            print(\"Invalid input. Please enter 'yes', 'no', or 'exit'.\")\n",
    "\n",
    "\n",
    "\n",
    "def selectService():\n",
