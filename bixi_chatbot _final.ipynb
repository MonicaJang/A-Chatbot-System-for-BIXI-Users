    "    \"\"\"\n",
    "\n",
    "    print(service_options)\n",
    "\n",
    "    # A while loop is created to determine the type of service the user wants.\n",
    "    # The user will be able to choose one of the displayed options: normal, ebike or dock\n",
    "    while True:\n",
    "        service=input(\"Please select one of these options ('exit' to exit): \").strip().lower()\n",
    "        # A string is returned according to the option selected. \n",
    "        if service in normal:\n",
    "            # If the condition is met, the function will return selected_service as a string indicating the type of service.\n",
    "            # print(\"User selected the normal bike\")\n",
    "            return (\"normal\")\n",
    "            # Do no need a break statement here because return breaks out of the function\n",
    "\n",
    "        elif service in ebike:\n",
    "            # print(\"User selected the e-bike\")\n",
    "            return (\"ebike\")\n",
    "            # Do no need a break statement here because return breaks out of the function\n",
    "\n",
    "        elif service in dock:\n",
    "            # print(\"User selected the dock\")\n",
    "            return(\"dock\")\n",
    "            # Do no need a break statement here because return breaks out of the function\n",
    "        elif service == 'exit':\n",
    "            # If the user wants to exit the app:\n",
    "            return(\"exit\")\n",
    "        \n",
    "        # If the user enters an invalid response or something different from the available options, the following message will appear \n",
    "        # and the loop will restart, asking the question again.     \n",
    "        else:\n",
    "            print(\"We couldn't recognize the service you selected. Please try again.\")\n",
    "\n",
    "\n",
    "\n",
